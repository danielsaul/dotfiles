
# zsh settings
HISTCONTROL=ignoredups:ignorespace

# Customise Geometry Theme
GEOMETRY_PROMPT=(geometry_newline geometry_echo geometry_path geometry_status)
GEOMETRY_STATUS_SYMBOL="▶"
GEOMETRY_STATUS_SYMBOL_ERROR="ᐅ"
GEOMETRY_PATH_COLOR="cyan"

GEOMETRY_GIT_SYMBOL_DIRTY="✘"
GEOMETRY_GIT_SYMBOL_CLEAN="✔"

# Use `zplug` for plugins
# https://github.com/zplug/zplug

export ZPLUG_HOME=/opt/homebrew/opt/zplug
source $ZPLUG_HOME/init.zsh

zplug "geometry-zsh/geometry", at:main # theme
zplug "zsh-users/zsh-autosuggestions"
zplug "zsh-users/zsh-syntax-highlighting", defer:2

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# Then, source plugins and add commands to $PATH
zplug load

## Aliases

 # l for longform ls
 alias l='ls -lh'

 # vi for neovim
 alias vi=nvim


## Environment Variables

export EDITOR="nvim"

## Other

# nvm
export NVM_DIR="$HOME/.nvm"
  [ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
  [ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion
